<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Activities.SignInActivity">

    <com.example.b00682737.maryportholidaypark.design.ResizableImageView
        android:id="@+id/btnBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/selector_backbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding5"
        android:layout_marginLeft="@dimen/padding5"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="@dimen/padding5"
        android:layout_marginRight="@dimen/padding5"
        android:layout_marginBottom="68dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.613">

        <com.example.b00682737.maryportholidaypark.design.ResizableImageView
            android:id="@+id/resizableImageView"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/delta0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.139" />

        <com.example.b00682737.maryportholidaypark.design.OpenSansTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding2"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/title_signin"
            android:textColor="@android:color/white"
            android:textColorHint="#80ffffff"
            android:textSize="@dimen/font_1" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding4"
            android:textColorHint="#80ffffff">

            <com.example.b00682737.maryportholidaypark.design.OpenSansEditText
                android:id="@+id/SigninName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:hint="@string/title_email"
                android:imeOptions="actionNext"
                android:inputType="text|textEmailAddress"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textColorHint="#80ffffff"
                android:textSize="@dimen/font_4" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding1"
            android:textColorHint="#80ffffff">

            <com.example.b00682737.maryportholidaypark.design.OpenSansEditText
                android:id="@+id/etSigninPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:hint="@string/title_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:textColorHint="#80ffffff"
                android:textSize="@dimen/font_4" />
        </android.support.design.widget.TextInputLayout>

        <com.example.b00682737.maryportholidaypark.design.OpenSansButton
            android:id="@+id/btnSignin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding4"
            android:background="@drawable/selector_whiteround"
            android:text="@string/title_signin"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_4" />

        <com.example.b00682737.maryportholidaypark.design.OpenSansTextView
            android:id="@+id/tvForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding2"
            android:layout_marginLeft="@dimen/padding2"
            android:layout_marginTop="@dimen/padding3"
            android:layout_marginEnd="@dimen/padding2"
            android:layout_marginRight="@dimen/padding2"
            android:text="Forgot Password?"
            android:textColor="@color/white"
            android:textSize="@dimen/font_3" />

        <com.example.b00682737.maryportholidaypark.design.OpenSansTextView
            android:id="@+id/tvSigninInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding2"
            android:layout_marginLeft="@dimen/padding2"
            android:layout_marginTop="@dimen/padding5"
            android:layout_marginEnd="@dimen/padding2"
            android:layout_marginRight="@dimen/padding2"
            android:layout_marginBottom="@dimen/padding2"
            android:text="Number of Incorrect Attempts"
            android:textColor="@color/white"
            android:textSize="@dimen/font_5" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding6"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.example.b00682737.maryportholidaypark.design.OpenSansTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_signup_hint"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_5" />

        <com.example.b00682737.maryportholidaypark.design.OpenSansBoldTextView
            android:id="@+id/tvRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding2"
            android:text="@string/title_register_now"
            android:textColor="@android:color/white"
            android:textColorHint="#80ffffff"
            android:textSize="@dimen/font_5" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>