<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding2"
    app:cardCornerRadius="@dimen/padding2"
    app:contentPadding="@dimen/padding2">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.example.b00682737.maryportholidaypark.design.ResizableImageView
                android:id="@+id/ivEvent"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/carnaby0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding2"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.example.b00682737.maryportholidaypark.design.OpenSansBoldTextView
                    android:id="@+id/tvCaravanName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Name"
                    android:drawableLeft="@drawable/ic_caravanid_small"
                    android:drawablePadding="@dimen/padding1"
                    android:textColor="@color/app_grey_dark"
                    android:textSize="@dimen/font_5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding1"
                    android:orientation="horizontal">

                    <com.example.b00682737.maryportholidaypark.design.OpenSansTextView
                        android:id="@+id/tvDate"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Event Time"
                        android:drawableLeft="@drawable/ic_calendar_small"
                        android:drawablePadding="@dimen/padding1"
                        android:textColor="@color/app_grey"
                        android:textSize="@dimen/font_7" />

                    <com.example.b00682737.maryportholidaypark.design.OpenSansTextView
                        android:id="@+id/tvDays"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Event Time"
                        android:layout_marginLeft="@dimen/padding1"
                        android:drawableLeft="@drawable/ic_checkoutdays_small"
                        android:drawablePadding="@dimen/padding1"
                        android:textColor="@color/app_grey"
                        android:textSize="@dimen/font_7" />
                </LinearLayout>

                <com.example.b00682737.maryportholidaypark.design.OpenSansTextView
                    android:id="@+id/tvPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding1"
                    android:text="Event Description"
                    android:drawableLeft="@drawable/ic_pound_small"
                    android:drawablePadding="@dimen/padding1"
                    android:textColor="@color/app_grey"
                    android:textSize="@dimen/font_8" />

                <com.example.b00682737.maryportholidaypark.design.OpenSansTextView
                    android:id="@+id/tvBeds"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding1"
                    android:text="Event Description"
                    android:drawableLeft="@drawable/ic_beds_small"
                    android:drawablePadding="@dimen/padding1"
                    android:textColor="@color/app_grey"
                    android:textSize="@dimen/font_8" />

                <com.example.b00682737.maryportholidaypark.design.OpenSansTextView
                    android:id="@+id/tvFuniture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding1"
                    android:text="Event Description"
                    android:drawableLeft="@drawable/ic_funiture_small"
                    android:drawablePadding="@dimen/padding1"
                    android:textColor="@color/app_grey"
                    android:textSize="@dimen/font_8" />
            </LinearLayout>

        </LinearLayout>

        <com.example.b00682737.maryportholidaypark.design.ResizableImageView
            android:id="@+id/ivExpired"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:visibility="visible"
            android:src="@drawable/ic_expired"/>
    </FrameLayout>


</android.support.v7.widget.CardView>