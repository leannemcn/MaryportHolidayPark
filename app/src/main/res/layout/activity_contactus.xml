<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/padding4"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding4"
            android:paddingRight="@dimen/padding4"
            android:paddingBottom="@dimen/padding2">

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                tools:context=".Activities.ContactUsActivity" />

            <com.example.b00682737.maryportholidaypark.design.OpenSansEditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding3"
                android:background="@drawable/bg_edit"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:maxLength="50"
                android:maxLines="1"
                android:paddingTop="@dimen/padding1"
                android:paddingBottom="@dimen/padding1"
                android:textColor="@color/app_grey_dark"
                android:textSize="@dimen/font_5" />

            <com.example.b00682737.maryportholidaypark.design.OpenSansEditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding3"
                android:background="@drawable/bg_edit"
                android:hint="Phone"
                android:inputType="phone"
                android:maxLength="50"
                android:maxLines="1"
                android:paddingTop="@dimen/padding1"
                android:paddingBottom="@dimen/padding1"
                android:textColor="@color/app_grey_dark"
                android:textSize="@dimen/font_5" />

            <com.example.b00682737.maryportholidaypark.design.OpenSansEditText
                android:id="@+id/edtMessage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/padding3"
                android:layout_weight="1"
                android:background="@drawable/bg_feedback_panel"
                android:gravity="start"
                android:hint="Your message here"
                android:inputType="textMultiLine"
                android:padding="@dimen/padding2"
                android:paddingTop="@dimen/padding1"
                android:paddingBottom="@dimen/padding1"
                android:textColor="@color/app_grey_dark"
                android:textSize="@dimen/font_5" />

            <com.example.b00682737.maryportholidaypark.design.OpenSansButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding3"
                android:layout_marginBottom="@dimen/padding4"
                android:background="@drawable/background2"
                android:gravity="center"
                android:minHeight="45dp"
                android:text="Submit"
                android:textColor="@color/white"
                android:textSize="@dimen/font_3" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>