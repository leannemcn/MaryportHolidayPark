<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding2"
    app:cardCornerRadius="@dimen/padding2"
    app:contentPadding="@dimen/padding2">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding2"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.example.b00682737.maryportholidaypark.design.OpenSansBoldTextView
                android:id="@+id/tvMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textColor="@color/app_grey_dark"
                android:textSize="@dimen/font_3" />

            <com.example.b00682737.maryportholidaypark.design.OpenSansTextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding1"
                android:text="tester@gmail.com"
                android:drawableLeft="@drawable/ic_mail_small"
                android:drawablePadding="@dimen/padding1"
                android:drawableTint="@color/app_blue"
                android:textColor="@color/app_blue"
                android:autoLink="email"
                android:textSize="@dimen/font_6" />

            <com.example.b00682737.maryportholidaypark.design.OpenSansTextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_marginTop="@dimen/padding1"
                android:autoLink="phone"
                android:drawableLeft="@drawable/ic_phone_small"
                android:drawablePadding="@dimen/padding1"
                android:drawableTint="@color/app_blue"
                android:text="+86 18191103166"
                android:textColor="@color/app_blue"
                android:textSize="@dimen/font_6" />

        </LinearLayout>

        <ImageView
            android:id="@+id/btnRemove"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right|bottom"
            android:layout_marginLeft="@dimen/padding2"
            android:background="@drawable/selector_item_action_red"
            android:padding="@dimen/padding2"
            android:src="@drawable/ic_item_delete" />

    </FrameLayout>

</android.support.v7.widget.CardView>